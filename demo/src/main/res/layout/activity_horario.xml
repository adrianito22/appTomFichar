<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.tiburela.android.controlAsistencia.demo.Activities.ActivityHorario">

    <TextView
        android:id="@+id/txtNombreHorario"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="18dp"
        android:layout_marginTop="15dp"
        android:text="Horario de trabajo"
        android:textSize="16sp"
        android:textStyle="bold" />

    <com.google.android.material.textfield.TextInputLayout
        style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox.Dense"

        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="15dp"
        android:layout_marginTop="5dp"
        android:layout_marginRight="15dp"
        android:gravity="center">

        <com.google.android.material.textfield.TextInputEditText
            android:id="@+id/ediNombreHorario"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Nombre Horario"
            android:textSize="16sp" />
    </com.google.android.material.textfield.TextInputLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="15dp"
        android:layout_marginTop="10dp"
        android:layout_marginRight="20dp"
        android:orientation="horizontal">

        <com.google.android.material.textfield.TextInputLayout
            style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox.Dense"

            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginRight="10dp"
            android:layout_weight="1"
            android:gravity="center">

            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/txtImputEntrada"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Entrada"
                android:textSize="16sp" />
        </com.google.android.material.textfield.TextInputLayout>

        <com.google.android.material.textfield.TextInputLayout
            style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox.Dense"

            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:layout_weight="1">

            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/txtImputSalida"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Salida"
                android:textSize="16sp" />
        </com.google.android.material.textfield.TextInputLayout>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="15dp"
        android:layout_marginTop="3dp"
        android:layout_marginRight="15dp"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/txtLunes"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_margin="5dp"
            android:layout_weight="1"
            android:background="@drawable/back_dia_no_selected"
            android:gravity="center"
            android:padding="7dp"
            android:tag="1"
            android:text="L"
            app:layout_constraintDimensionRatio="1:1" />

        <TextView
            android:id="@+id/txtMartes"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_margin="5dp"
            android:layout_weight="1"
            android:background="@drawable/back_dia_no_selected"
            android:gravity="center"
            android:padding="7dp"
            android:tag="2"
            android:text="M"
            app:layout_constraintDimensionRatio="1:1" />

        <TextView
            android:id="@+id/txtMiercoles"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_margin="5dp"
            android:layout_weight="1"
            android:background="@drawable/back_dia_no_selected"
            android:gravity="center"
            android:padding="7dp"
            android:tag="3"
            android:text="M"
            app:layout_constraintDimensionRatio="1:1" />

        <TextView
            android:id="@+id/txtJueves"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_margin="5dp"
            android:layout_weight="1"
            android:background="@drawable/back_dia_no_selected"
            android:gravity="center"
            android:padding="7dp"
            android:tag="4"
            android:text="J"
            app:layout_constraintDimensionRatio="1:1" />

        <TextView
            android:id="@+id/txtViernes"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_margin="5dp"
            android:layout_weight="1"
            android:background="@drawable/back_dia_no_selected"
            android:gravity="center"
            android:padding="7dp"
            android:tag="5"
            android:text="V"
            app:layout_constraintDimensionRatio="1:1" />

        <TextView
            android:id="@+id/txtSabado"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_margin="5dp"
            android:layout_weight="1"
            android:background="@drawable/back_dia_no_selected"
            android:gravity="center"
            android:padding="7dp"
            android:tag="6"
            android:text="S"
            app:layout_constraintDimensionRatio="1:1" />

        <TextView
            android:id="@+id/txtDomingo"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_margin="5dp"
            android:layout_weight="1"
            android:background="@drawable/back_dia_no_selected"
            android:gravity="center"
            android:padding="7dp"
            android:tag="7"
            android:text="D"
            app:layout_constraintDimensionRatio="1:1" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="10dp"
        android:layout_marginRight="20dp"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/txtNumsEmpleados"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:gravity="center_vertical"
            android:text="0" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_marginLeft="10dp"
            android:layout_weight="1"
            android:gravity="center_vertical"
            android:text="Empleados" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/imgAddEmpleado"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:layout_gravity="right"
                app:srcCompat="@drawable/ic_baseline_person_add_horario" />

        </LinearLayout>

    </LinearLayout>

    <Button
        android:id="@+id/btnGuardar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="30dp"
        android:layout_marginRight="20dp"
        android:background="@drawable/back_draw"
        android:text="Guardar"
        android:textColor="#FFFFFF" />
</LinearLayout>