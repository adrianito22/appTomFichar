<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".Activities.ActivityHorario">

    <TextView
        android:id="@+id/textView12"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="15dp"
        android:layout_marginTop="15dp"
        android:text="Horario de trabajo" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="15dp"
        android:layout_marginTop="10dp"
        android:layout_marginRight="20dp"
        android:orientation="horizontal">

        <android.support.design.widget.TextInputLayout
            style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox.Dense"

            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginRight="10dp"
            android:layout_weight="1">

            <android.support.design.widget.TextInputEditText
                android:id="@+id/txtImputEntrada"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Entrada"
                android:textSize="14sp" />
        </android.support.design.widget.TextInputLayout>

        <android.support.design.widget.TextInputLayout
            style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox.Dense"

            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:layout_weight="1">

            <android.support.design.widget.TextInputEditText
                android:id="@+id/txtImputSalida"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Salida"
                android:textSize="14sp" />
        </android.support.design.widget.TextInputLayout>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="15dp"
        android:layout_marginTop="2dp"
        android:layout_marginRight="15dp"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/txtLunes"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_margin="5dp"
            android:layout_weight="1"
            android:background="@drawable/back_dia_no_selected"
            android:gravity="center"
            android:padding="5dp"
            android:text="L"
            app:layout_constraintDimensionRatio="1:1" />

        <TextView
            android:id="@+id/txtMartes"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_margin="5dp"
            android:layout_weight="1"
            android:background="@drawable/back_dia_no_selected"
            android:gravity="center"
            android:padding="5dp"
            android:text="M"
            app:layout_constraintDimensionRatio="1:1" />

        <TextView
            android:id="@+id/txtMiercoles"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_margin="5dp"
            android:layout_weight="1"
            android:background="@drawable/back_dia_no_selected"
            android:gravity="center"
            android:padding="5dp"
            android:text="M"
            app:layout_constraintDimensionRatio="1:1" />

        <TextView
            android:id="@+id/txtJueves"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_margin="5dp"
            android:layout_weight="1"
            android:background="@drawable/back_dia_no_selected"
            android:gravity="center"
            android:padding="5dp"
            android:text="J"
            app:layout_constraintDimensionRatio="1:1" />

        <TextView
            android:id="@+id/txtViernes"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_margin="5dp"
            android:layout_weight="1"
            android:background="@drawable/back_dia_no_selected"
            android:gravity="center"
            android:padding="5dp"
            android:text="V"
            app:layout_constraintDimensionRatio="1:1" />

        <TextView
            android:id="@+id/txtSabado"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_margin="5dp"
            android:layout_weight="1"
            android:background="@drawable/back_dia_no_selected"
            android:gravity="center"
            android:padding="5dp"
            android:text="S"
            app:layout_constraintDimensionRatio="1:1" />

        <TextView
            android:id="@+id/txtDomingo"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_margin="5dp"
            android:layout_weight="1"
            android:background="@drawable/back_dia_no_selected"
            android:gravity="center"
            android:padding="5dp"
            android:text="D"
            app:layout_constraintDimensionRatio="1:1" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="10dp"
        android:layout_marginRight="20dp"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/txtNumsEmpleados"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:gravity="center_vertical"
            android:text="0" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_marginLeft="10dp"
            android:layout_weight="1"
            android:gravity="center_vertical"
            android:text="Empleados" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/imgAddEmpleado"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:layout_gravity="right"
                tools:srcCompat="@tools:sample/avatars" />
        </LinearLayout>

    </LinearLayout>
</LinearLayout>