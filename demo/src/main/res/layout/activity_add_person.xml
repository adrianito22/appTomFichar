<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:background="@color/grey_90"
    tools:context="com.google.android.cameraview.demo.Activities.AddPerson">


    <android.support.v7.widget.Toolbar
        android:id="@+id/toolbarAddPeople"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/primary"
        android:visibility="gone"
        app:titleTextColor="#fff"></android.support.v7.widget.Toolbar>



    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:gravity="center"
        android:padding="10dp"
        android:layout_centerInParent="true"
        android:layout_below="@+id/toolbarAddPeople"
        android:layout_gravity="center"

        >


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:layout_marginTop="5dp"
            android:orientation="horizontal">

            <EditText
                android:id="@+id/et_name"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:capitalize="words"
                android:gravity="center_vertical"
                android:hint="Nombre y Apellido"
                android:inputType="text|textCapWords"
                android:paddingStart="5dp"
                android:paddingLeft="5dp"
                android:textColor="#fff"
                android:textColorHint="#fff"
                android:textSize="14sp"
                android:textStyle="bold" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:layout_marginTop="5dp"
            android:orientation="horizontal">


            <TextView
                android:id="@+id/et_image"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="0.9"
                android:focusable="false"
                android:gravity="center_vertical"
                android:paddingStart="5dp"
                android:paddingLeft="5dp"
                android:paddingRight="5dp"
                android:text="No  Imagen Selecionada"
                android:textColor="#fff"
                android:textColorHint="#fff"
                android:textSize="14sp" />

            <Button
                android:id="@+id/btn_select_image"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@color/primary"
                android:paddingLeft="10dp"
                android:paddingRight="10dp"
                android:text="Agregar Persona"
                android:textColor="#fff" />


        </LinearLayout>



    </LinearLayout>

</RelativeLayout>
