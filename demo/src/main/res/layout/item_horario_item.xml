<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="5dp"
    android:background="@drawable/back_horario"
    android:orientation="vertical"
    tools:context=".Activities.ActivityHorario">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="10dp"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/imageView7"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20dp"
            app:srcCompat="@drawable/baseline_view_timeline_24" />

        <TextView
            android:id="@+id/txtNombreHorario"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center|left"
            android:layout_marginLeft="5dp"
            android:text="horario Nombre"
            android:textSize="16sp"
            android:textStyle="bold" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/imgViewEditHorario"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="right"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="20dp"
                app:srcCompat="@drawable/baseline_edit_note_24" />
        </LinearLayout>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="10dp"
        android:layout_marginRight="20dp"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/txtHorarioDesdeHasta"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:fontFamily="sans-serif-medium"
            android:text="Horario fijo desde 4: 550am"
            android:textSize="17sp" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="15dp"
        android:layout_marginTop="3dp"
        android:layout_marginRight="15dp"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/txtLunes"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_margin="5dp"
            android:layout_weight="1"
            android:background="@drawable/back_dia_no_selected"
            android:gravity="center"
            android:padding="7dp"
            android:tag="1"
            android:text="L"
            app:layout_constraintDimensionRatio="1:1" />

        <TextView
            android:id="@+id/txtMartes"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_margin="5dp"
            android:layout_weight="1"
            android:background="@drawable/back_dia_no_selected"
            android:gravity="center"
            android:padding="7dp"
            android:tag="2"
            android:text="M"
            app:layout_constraintDimensionRatio="1:1" />

        <TextView
            android:id="@+id/txtMiercoles"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_margin="5dp"
            android:layout_weight="1"
            android:background="@drawable/back_dia_no_selected"
            android:gravity="center"
            android:padding="7dp"
            android:tag="3"
            android:text="M"
            app:layout_constraintDimensionRatio="1:1" />

        <TextView
            android:id="@+id/txtJueves"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_margin="5dp"
            android:layout_weight="1"
            android:background="@drawable/back_dia_no_selected"
            android:gravity="center"
            android:padding="7dp"
            android:tag="4"
            android:text="J"
            app:layout_constraintDimensionRatio="1:1" />

        <TextView
            android:id="@+id/txtViernes"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_margin="5dp"
            android:layout_weight="1"
            android:background="@drawable/back_dia_no_selected"
            android:gravity="center"
            android:padding="7dp"
            android:tag="5"
            android:text="V"
            app:layout_constraintDimensionRatio="1:1" />

        <TextView
            android:id="@+id/txtSabado"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_margin="5dp"
            android:layout_weight="1"
            android:background="@drawable/back_dia_no_selected"
            android:gravity="center"
            android:padding="7dp"
            android:tag="6"
            android:text="S"
            app:layout_constraintDimensionRatio="1:1" />

        <TextView
            android:id="@+id/txtDomingo"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_margin="5dp"
            android:layout_weight="1"
            android:background="@drawable/back_dia_no_selected"
            android:gravity="center"
            android:padding="7dp"
            android:tag="7"
            android:text="D"
            app:layout_constraintDimensionRatio="1:1" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="10dp"
        android:layout_marginRight="20dp"
        android:layout_marginBottom="10dp"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/txtNumsEmpleados"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:gravity="center_vertical"
            android:text="0" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_marginLeft="10dp"
            android:layout_weight="1"
            android:gravity="center_vertical"
            android:text="Empleados" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:orientation="vertical" />

    </LinearLayout>

</LinearLayout>